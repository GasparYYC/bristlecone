<!DOCTYPE EvaluatorConfiguration SYSTEM "file://C:/Documents and Settings/rhannus/workspace/evaluator/evaluator.dtd">
<EvaluatorConfiguration name="readwrite" testDuration="1200"
	autoCommit="false" statusInterval="500" htmlFile="readwriteResults.html">

	<DataSource name="s1" driver="com.mysql.jdbc.Driver"
		url="jdbc:mysql://@{HOST.HOST}:@{CONN_LISTEN_PORT}/evaluator@qos=RW_STRICT&amp;createDatabaseIfNotExist=true"
		user="@{CONN_CLIENTLOGIN}"
		password="@{CONN_CLIENTPASSWORD}"/>
	 
	<DataSource name="s2" driver="com.mysql.jdbc.Driver"
		url="jdbc:mysql://@{HOST.HOST}:@{CONN_LISTEN_PORT}/evaluator@qos=RO_RELAXED&amp;createDatabaseIfNotExist=true"
		user="@{CONN_CLIENTLOGIN}"
		password="@{CONN_CLIENTPASSWORD}"/>

	<TableGroup name="ta" size="100" dataSource="s1">
		<ThreadGroup name="A" dataSource="s1" threadCount="10" thinkTime="50"
			updates="15" deletes="5" inserts="10" readSize="1000"
			rampUpInterval="5" rampUpIncrement="2" reconnectInterval="10" />
        <ThreadGroup name="B" dataSource="s2" threadCount="10" thinkTime="500"
            readSize="1000"
            rampUpInterval="5" rampUpIncrement="2" reconnectInterval="10" />
	</TableGroup>

</EvaluatorConfiguration>
