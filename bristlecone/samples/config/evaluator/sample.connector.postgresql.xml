<!DOCTYPE EvaluatorConfiguration SYSTEM "file://../xml/evaluator.dtd">
<EvaluatorConfiguration name="tungsten" testDuration="1200"
	autoCommit="false" statusInterval="500" htmlFile="connectorPostgresqlResults.html">

	<DataSource name="s1" driver="org.postgresql.Driver" 		
		url="jdbc:postgresql://@{HOST.HOST}:@{CONN_LISTEN_PORT}/evaluator?createDatabaseIfNotExist=true"
		user="@{CONN_CLIENTLOGIN}" 
		password="@{CONN_CLIENTPASSWORD}"/>	
	 
	<TableGroup name="ta" size="100" dataSource="s1">
		<ThreadGroup dataSource="s1" name="A" threadCount="10" thinkTime="50"
			updates="30" deletes="40" inserts="30" readSize="1000"
			rampUpInterval="5" rampUpIncrement="20" reconnectInterval="10" />
	</TableGroup>

</EvaluatorConfiguration>
